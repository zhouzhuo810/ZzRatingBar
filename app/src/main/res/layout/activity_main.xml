<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal" />

        <me.zhouzhuo.zzratingbar.ZzRatingBar
            android:id="@+id/zzratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:zrb_click_enable="false"
            app:zrb_horizontal_spacing="5dp"
            app:zrb_rating="0"
            app:zrb_star_count="4"
            app:zrb_star_dimension="20dp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/sw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="click_enable" />

        <Button
            android:id="@+id/btn_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="rating1" />

        <Button
            android:id="@+id/btn_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rating2" />

        <Button
            android:id="@+id/btn_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rating3" />

        <Button
            android:id="@+id/btn_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="rating4" />

        <Button
            android:id="@+id/btn_size_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="size1" />

        <Button
            android:id="@+id/btn_size_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="size2" />

        <Button
            android:id="@+id/btn_size_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="size3" />

        <Button
            android:id="@+id/btn_count_four"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="count4" />

        <Button
            android:id="@+id/btn_count_five"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="count5" />

        <Button
            android:id="@+id/btn_style_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="style1" />

        <Button
            android:id="@+id/btn_style_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:text="style2" />


    </LinearLayout>


</ScrollView>

